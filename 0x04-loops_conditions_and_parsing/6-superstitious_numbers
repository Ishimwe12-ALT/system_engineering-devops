#!/usr/bin/env bash
# This script displays numbers 1â€“20 and shows special messages for 4, 9, and 17 using a case statement

count=1
while [ "$count" -le 20 ]; do
  echo "$count"
  case "$count" in
    4)
      echo "bad luck from China"
      ;;
    9)
      echo "bad luck from Japan"
      ;;
    17)
      echo "bad luck from Italy"
      ;;
  esac
  ((count++))
done
